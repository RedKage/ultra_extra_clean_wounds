	<GUIAction type="Hide" target="HUD"/>
	<GUIAction type="Show" target="HUD_Maximize"/>
</EventActionBatch>

<EventActionBatch name="GAME_GUI_HIDE_GAME_HUD">
	<GUIAction type="Hide" target="HUD"/>
